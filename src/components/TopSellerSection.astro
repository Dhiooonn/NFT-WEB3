---
const { imgSrc, name, eth } = Astro.props;
---

<section class="mt-28">
    <h1 class="text-white font-bold text-6xl text-center">Top Seller</h1>
    <div class="seller">
        <div
            class="flex items-center gap-5 bg-red-200 w-[312px] h-auto rounded-[20px] p-[10px]"
        >
            <!-- img -->
            <img
                src={imgSrc}
                alt={name}
                class="w-[94px] h-[94px] rounded-xl bg-white"
            />

            <!-- Name Seller -->
            <div class="flex flex-col">
                <h3 class="font-semibold text-xl">{name}</h3>
                <p class="font-normal text-sm">{eth}</p>
            </div>
        </div>
    </div>
</section>
