---
import NFTcard from "../components/cards/NFTcard.astro";
import NFTList from "../data/NFTList"; 
---

<section id="explore" class="mt-96 md:mt-[820px] mb-64">
    <!-- Title -->
    <div class="information text-white font-bold text-center">
        <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl">
            Top Picks This Week
        </h1>
        <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl">
            Your Next Big NFT Awaits
        </h1>
    </div>

    <!-- Mapping data -->
    <div
        id="nftContainer"
        class="flex gap-5 mt-12 overflow-x-auto scrollbar-hide snap-x snap-mandatory scroll-smooth"
    >
        {
            NFTList.map((nft) => (
                <div class="nft-items">
                    <NFTcard
                        imgSrc={nft.imgSrc}
                        title={nft.title}
                        creator={nft.creator}
                        currentBid={nft.currentBid}
                    />
                </div>
            ))
        }
    </div>

    <!-- Load file TS hanya di client -->
    <script type="module" src="/src/scripts/ScrollHorizontal.ts"></script>
</section>
