---
import ArtistCardNFT from "../components/cards/ArtistCardNFT.astro";
import { categoryFilters, Artistnfts } from "../data/ArtistNFT";
---

<section id="activity" class="mx-4 sm:mx-8 md:mx-11">
    <h1
        class="text-center font-bold text-white mt-28 text-3xl sm:text-4xl md:text-5xl lg:text-6xl"
    >
        Hot Bids
    </h1>
    <div>
        <!-- Filters -->
        <div class="flex flex-wrap gap-3 justify-center mt-6 sm:mt-8">
            {
                categoryFilters.map((category) => (
                    <button class="py-2 px-4 rounded-xl border-2 border-borderColor text-white">
                        {category}
                    </button>
                ))
            }
        </div>

        <!-- NFT Cards -->
        <div
            class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6 mt-8 sm:mt-11"
        >
            {Artistnfts.map((nft) => <ArtistCardNFT {...nft} />)}
        </div>
    </div>
</section>
